#:kivy 2.1.0

#.kv file implementation of FloatLayout

ScreenManagement:

    OpeningScreen:

    ModifiedFilesScreen:

<OpeningScreen>:
    name: "openscreen"
    
    FloatLayout: 
        size: root.width, root.height
        
        canvas:
            Color: 
                rgba: 1, 1, 1, .8
            Rectangle:
                source: 'pexels-simon-berger-1266810.jpg'
                pos: self.pos
                size: self.size

        Button:
            text: "- Welcome -"
            font_size: 50
            bold: True
            #background_normal: ''
            #background_disabled_normal: self.background_normal
            background_color: 0.1, 0.5, 0.6, 1
            pos_hint: {"x":.1, "top":1}
            size_hint: .8, .2
            font_size: 60

        Button:
            text: "Click Here for a Modified Files Report"
            font_size: 40
            on_press: 
                app.root.current = "modifiedfilesscreen"
                root.manager.transition.direction = "up"
            pos_hint: {"x":.25, "top":.4}
            background_color: 0.1, 0.5, 0.6, 1
            size_hint: .5, 0.05

<ModifiedFilesScreen>:
    name: "modifiedfilesscreen"

    FloatLayout: 
        size: root.width, root.height
        
        canvas:
            Color: 
                rgba: 1, 1, 1, .8
            Rectangle:
                source: 'pexels-photomix-company-95916.jpg'
                pos: self.pos
                size: self.size

        Button:
            id: topbutton
            text: "-- Check for Recently Modified Files --"
            background_color: 0.1, 0.5, 0.6, 1
            pos_hint: {"x":.1, "top":1}
            size_hint: .8, .2
            font_size: 60
        
        TextInput:
            id: path_input
            hint_text:"Enter Directory Path to Search (ex. /Users/name/Desktop/folder/*)"
            size_hint: 0.7, 0.05
            pos_hint: {"x":.15, "y":.5}

        TextInput:
            id: path_input2
            hint_text:"Enter Report Destination Path (ex. /Users/name/Desktop/folder/report.csv)"
            size_hint: 0.7, 0.05
            pos_hint: {"x":.15, "y":.45}

        Button:
            id: firstbutton
            size: self.texture_size
            text:"Click here to Produce Report"
            pos_hint: {"x":.25, "top":.4}
            background_color: 0.1, 0.5, 0.6, 1
            size_hint: .5, 0.05
            font_size: 40
            on_press: root.click()

        Label:
            id: results
            font_size: 40
            text: ''
            pos_hint: {"x":.25, "top":0}
            size_hint: .5, 0.05
            background_color: 0.1, 0.5, 0.6, 1

        Button:
            id: backbutton
            size: self.texture_size
            text:"Click here to Return to Welcome Screen"
            pos_hint: {"x": .25, "top": .12}
            background_color: 0.1, 0.5, 0.6, 1
            size_hint: .5, 0.05
            font_size: 40
            on_press: 
                app.root.current = "openscreen"
                root.manager.transition.direction = "down"

